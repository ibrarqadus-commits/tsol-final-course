{
  "name": "lm-mastermind",
  "version": "1.0.0",
  "description": "Monty's Letting & Management Guerrilla Business Mastermind Course",
  "main": "index.html",
  "scripts": {
    "dev": "node server.js",
    "start": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy:vercel": "npx vercel --prod --yes --confirm",
    "clean": "rm -rf node_modules coverage && npm install"
